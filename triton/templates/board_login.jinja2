{% extends "base.jinja2" %}

{% block container %}
<div class="col-lg-12 px-0">
    <form method="post">
        <div class="mb-3">
            <label for="inputId" class="form-label">로그인 ID</label>
            <input type="text" class="form-control" id="inputId" name="login_id" placeholder="로그인 ID를 입력하세요">
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">로그인 비밀번호</label>
            <input type="password" class="form-control" id="inputPassword" name="login_pass" placeholder="로그인 비밀번호를 입력하세요">
        </div>

        <button type="submit" class="btn save btn-primary">로그인</button>
    </form>
</div>
{% endblock %}
